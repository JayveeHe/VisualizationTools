<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearlayout_spreadtimeline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/title_postline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="微博转发曲线"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/text_clickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前标注用户"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_dscp_spreadTimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关说明" />

        <TextView
            android:id="@+id/text_spreadCurrentWeibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前微博：\n"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转发数排行："
            android:textColor="#9900ff"
            android:textSize="20sp" />

        <ui.MyListView
            android:id="@+id/list_repostRank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ui.MyListView>
    </LinearLayout>

</ScrollView>